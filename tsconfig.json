{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/app/*"],
      "@components/*": ["frontend/app/components/*"],
      "@context/*": ["frontend/app/context/*"],
      "@core/*": ["frontend/app/core/*"],
      "@lib/*": ["frontend/app/lib/*"],
      "@models/*": ["frontend/app/models/*"],
      "@operations/*": ["frontend/app/core/operations/*"],
      "@services/*": ["frontend/app/core/services/*"],
    }
  },
  "include": ["./frontend/app","./frontend/third_party","./frontend/app/globals.d.ts"],
  "exclude":["./node_modules","./frontend/app/lib"]
}